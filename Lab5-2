#include <avr/io.h>
#include <util/delay.h>

void uart_init(void) {
    // Baud 115200 → UBRR0 = 8 (assuming 16 MHz clock)
    UBRR0H = 0;
    UBRR0L = 8;

    // 7 data bits, Even parity, 2 stop bits → 7E2
    UCSR0C = (1 << UPM01)     // Even parity
           | (1 << USBS0)     // 2 stop bits
           | (1 << UCSZ01);  // 7-bit data (UCSZ01 = 1, UCSZ00 = 0)

    // enable transmitter
    UCSR0B = (1 << TXEN0);
}

void uart_send(char c) {
    // wait until buffer is empty
    while (!(UCSR0A & (1 << UDRE0)));
    UDR0 = c;
}

void uart_send_string(const char *s) {
    while (*s) {
        uart_send(*s++);
    }
}

int main(void) {
    uart_init();

    // Example loop
    while (1) {
        uart_send_string("Hello Bare-Metal UART 7E2\r\n");
        _delay_ms(500);
    }
    return 0;
}
